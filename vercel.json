{
  "public": true,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "ALLOWALL" },
        { "key": "Content-Security-Policy", "value": "frame-ancestors https://amorcer.com http://localhost:3000" }
      ]
    }
  ],
  "functions": {
    "app/**/*.tsx": {
      "maxDuration": 30
    }
  }
}